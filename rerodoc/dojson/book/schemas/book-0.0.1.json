{
    "description": "A book document...",
    "title": "Book",
    "required": [
        "title",
        "language",
        "recid",
        "type"
        ],
    "id": "http://doc.rero.ch/schemas/book-0.0.1.json",
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "type":{
            "uniqueItems": true,
            "minItems": 1,
            "type": "array",
            "items": {
                "type": "string"
            },
            "title": "Document type"
        },
        "recid":{
            "type": "string",
            "title": "identifier"
        },
        "rero_id":{
            "type": "string",
            "title": "rero identifier"
        },
        "media_type":{
            "type": "string",
            "title": "rero identifier"
        },
        "isbn10":{
            "type": "string",
            "title": "ISBN identifier with 10 digits",
            "pattern": "^[0-9]{1,5}-[0-9]{1,7}-[0-9]{1,7}-[0-9,X]{1}$"
        },
        "isbn13":{
            "type": "string",
            "title": "ISBN identifier with 13 digits",
            "pattern": "^978[0-9]{9}[0-9]{1}$"
        },
        "language": {
            "type": "string",
            "description": "FIXME: we shall provide the ISO enum",
            "title": "Language"
        },
        "edition": {
            "type": "object",
            "title": "Edition",
            "items": {
                "type": "object",
                "properties": { 
                    "full": {
                        "type": "string",
                        "title": "Concatenation of title and subtitle"
                    },
                    "name": {
                        "type": "string",
                        "title": "Edition name"
                    },
                    "remainder": {
                        "type": "string",
                        "title": "Remainder of the edition"
                    }
                },
                "title": "Edition"
            }
        },
        "publication": {
            "type": "object",
            "title": "publication",
            "items": {
                "type": "object",
                "properties": { 
                    "full": {
                        "type": "string",
                        "title": "Concatenation other fields"
                    },
                    "location": {
                        "type": "string",
                        "title": "Publication location"
                    },
                    "publisher": {
                        "type": "string",
                        "title": "Publisher of the publication"
                    },
                    "date": {
                        "type": "string",
                        "title": "Date of the publication"
                    },
                    "print_location": {
                        "type": "string",
                        "title": "Location of the printer of the publication"
                    },
                    "printer": {
                        "type": "string",
                        "title": "Printer of the publication"
                    }
                },
                "title": "Edition"
            }
        },
        "other_title": {
            "type": "object",
            "title": "Alternative document title",
            "items": {
                "type": "object",
                "properties": {
                    "lang": {
                        "type": "string",
                        "title": "Title language"
                    },
                    "full": {
                        "type": "string",
                        "title": "Concatenation of title and subtitle"
                    },
                    "subtitle": {
                        "type": "string",
                        "title": "Subtitle of the document"
                    },
                    "maintitle": {
                        "type": "string",
                        "title": "Main title of the document"
                    }
                },
                "title": "Alternative title information"
            }
        },
        "title": {
            "type": "object",
            "title": "Document title",
            "items": {
                "type": "object",
                "required": [
                    "title",
                "lang"
                    ],
                "properties": {
                    "lang": {
                        "type": "string",
                        "title": "Title language"
                    },
                    "full": {
                        "type": "string",
                        "title": "Concatenation of title and subtitle"
                    },
                    "subtitle": {
                        "type": "string",
                        "title": "Subtitle of the document"
                    },
                    "maintitle": {
                        "type": "string",
                        "title": "Main title of the document"
                    }
                },
                "title": "Title information"
            }
        },
        "authors": {
            "uniqueItems": true,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Author name",
                        "type": "string",
                        "description": "author name as it appears in the paper",
                        "format": ".+, .+"
                    },
                    "full": {
                        "title": "Author name",
                        "type": "string",
                        "description": "author name, author dates, role"
                    },
                     "affiliation": {
                        "title": "Author name",
                        "type": "string",
                        "description": "author's affiliation"
                    },
                    "orcid": {
                        "pattern": "\\d{4}-\\d{4}-\\d{4}-\\d{4}",
                        "title": "ORCID ID",
                        "type": "string",
                        "description": "ORCID Id when available",
                        "format": "orcid"
                    },
                    "role": {
                        "enum": [
                            "Dir.",
                            "Codir."
                        ],
                        "type": "string",
                        "description": "Role of the author within the paper.",
                        "title": "Role of the person"
                    }
                },
                "title": "Author"
            },
            "type": "array",
            "description": "List with all the authors",
            "title": "Authors"
        }
    }
}
