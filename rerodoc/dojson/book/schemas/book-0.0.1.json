{
    "description": "A book document...",
    "title": "Book",
    "required": [
        "title",
        "language",
        "recid",
        "type"
        ],
    "id": "http://doc.rero.ch/schemas/book-0.0.1.json",
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "type":{
            "uniqueItems": true,
            "minItems": 1,
            "type": "array",
            "items": {
                "type": "string"
            },
            "title": "Document type"
        },
        "recid":{
            "uniqueItems": true,
            "minItems": 1,
            "type": "string",
            "title": "identifier"
        },
        "isbn10":{
            "type": "string",
            "title": "ISBN identifier with 10 digits",
            "pattern": "^[0-9]{1,5}-[0-9]{1,7}-[0-9]{1,7}-[0-9,X]{1}$"
        },
        "isbn13":{
            "type": "string",
            "title": "ISBN identifier with 13 digits",
            "pattern": "^978[0-9]{9}[0-9]{1}$"
        },
        "language": {
            "type": "string",
            "description": "FIXME: we shall provide the ISO enum",
            "title": "Language"
        },
        "title": {
            "type": "object",
            "title": "Document title",
            "items": {
                "type": "object",
                "required": [
                    "title",
                "lang"
                    ],
                "properties": {
                    "lang": {
                        "type": "string",
                        "title": "Title language"
                    },
                    "full": {
                        "type": "string",
                        "title": "Concatenation of title and subtitle"
                    },
                    "subtitle": {
                        "type": "string",
                        "title": "Subtitle of the document"
                    },
                    "maintitle": {
                        "type": "string",
                        "title": "Main title of the document"
                    }
                },
                "title": "Title information"
            }
        }
    }
}
